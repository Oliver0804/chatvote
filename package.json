{
  "name": "chatvote",
  "version": "1.0.0",
  "description": "ChatVote - 直播互動投票系統，專為直播主與聊天室設計",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "docker:build": "docker build -t chatvote .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down && docker rmi chatvote",
    "setup": "npm install",
    "quick-start": "npm run setup && npm run dev",
    "production": "npm run docker:build && npm run docker:run"
  },
  "keywords": [
    "voting",
    "realtime",
    "websocket",
    "poll",
    "streaming",
    "chat",
    "live"
  ],
  "author": "Bashcat (BASHCAT.NET)",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.56.0",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "qrcode": "^1.5.3",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
